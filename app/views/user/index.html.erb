<% provide(:title, "All Users") %>
<%admin_login_flag = logged_in? && is_admin?%>
<h1>Users</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <%=render "shared/message_printer" %>
      <table class="table table-hover">
        <tbody>
          <% @user.each do |user| %>
            <tr>
              <td><%=user["id"] %></td>
              <td><%= link_to user["name"], user_url(user["id"]) %></td>
              <%if admin_login_flag %>
                <td><%= link_to user_path(user["id"]), method: :delete do %><span class="glyphicon glyphicon-trash"></span><% end %></td>
              <%end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>