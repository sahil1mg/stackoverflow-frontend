<div class = "container-fluid">
  <div class = "row">
    <div class= "col-md-11">
      <h2> Search Results for <%=@search_query %></h2>
    </div>
    <div class="col-md-1">
      <%=button_to "Ask Question", new_question_path, class: 'btn btn-primary', id: "custom-btn", method: :get%>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <%if(@questions.nil? || @questions.empty?) %>
        <h3 class="center">No results found</h3>
        <%else %>
           <%=render 'shared/question_printer', questions: @questions, count_of_answers: @count_of_answers %>
        <%end %>
    </div>
  </div>
</div>